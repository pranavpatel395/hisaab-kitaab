<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Khataabook</title>
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  />
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <!-- <link rel="stylesheet" href="/css/index.css"> -->
</head>
<body class="bg-white text-gray-800 min-h-screen flex flex-col">

  <!-- Include Navbar -->
  <%- include('navbar') %>

  <!-- Main Content -->
  <main class="flex-grow flex justify-center p-6">
    <div class="w-full max-w-7xl">
      <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center">All Hisaab Khataab</h1>
      
      <!-- Flex container for the boxes -->
      <ul class="flex flex-wrap -mx-2">
        <% if (files.length > 0) { %>
          <% files.forEach(function(file) { %>
            <li class="w-full md:w-1/3 px-2 mb-4">
              <div class="bg-gray-100 p-4 rounded h-full flex flex-col justify-between relative shadow">
                
                <!-- Date in the top-right corner -->
                <span class="text-xs text-gray-400 absolute top-2 right-2"><%= file.createdDate %></span>
                
                <!-- Main content -->
                <span class="text-lg text-gray-600 truncate"><%= file.title %></span>
                
                <div class="space-x-4 mt-4">
                  <a href="/hisaab/<%= file.name %>" class="text-blue-500">ğŸ‘ï¸</a>
                  <a href="/edit/<%= file.name %>" class="text-blue-500"><i class="icon-edit"></i> edit</a>
                  <a href="/delet/<%= file.name %>" class="text-blue-500">ğŸ—‘ï¸</a>
                </div>
              </div>
            </li>
          <% }) %>
        <% } else { %>
          <h2 class="text-center text-lg text-gray-500 shadow p-4 rounded">No hisaab is created</h2>
        <% } %>
      </ul>
    </div>
  </main>

</body>
</html>
